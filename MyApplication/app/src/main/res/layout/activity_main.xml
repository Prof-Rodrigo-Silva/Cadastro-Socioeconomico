<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corfundo"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCasdastrarUsuarioBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="40dp"
        android:onClick="btnLogarUsuario"
        android:text="Executar  Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTSenhaUsuario" />

    <EditText
        android:id="@+id/eTNomeUsuario"
        android:layout_width="428dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Informe o Nome"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eTSenhaUsuario"
        android:layout_width="428dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Informe a Senha"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTNomeUsuario" />

    <Button
        android:id="@+id/btnCadastroUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="36dp"
        android:onClick="btnCadastrarUsuario"
        android:text="Novo UsuÃ¡rio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCasdastrarUsuarioBD" />

    <ImageButton
        android:id="@+id/iBtnEquipe"
        android:layout_width="258dp"
        android:layout_height="237dp"
        android:layout_marginLeft="152dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/eTNomeUsuario"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bage1" />

</android.support.constraint.ConstraintLayout>